{
  "name": "xiaohongshu-mcp-nodejs",
  "version": "1.0.0",
  "description": "企业级小红书MCP Node.js重构 - 支持多账号矩阵管理、反风控、数据采集与发布",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "xiaohongshu-mcp": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --mode client",
    "build:server": "vite build --mode server",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "setup": "node scripts/setup.js",
    "clean": "rimraf dist build coverage",
    "preinstall": "node scripts/check-node-version.js"
  },
  "keywords": [
    "xiaohongshu",
    "mcp",
    "automation",
    "social-media",
    "data-collection",
    "playwright",
    "nodejs"
  ],
  "author": "MCP Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "playwright": "^1.40.0",
    "playwright-stealth": "^1.0.0",
    "ghost-cursor": "^1.1.19",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "bull": "^4.12.2",
    "redis": "^4.6.10",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.8",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "puppeteer": "^21.5.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "vite": "^5.0.7",
    "rimraf": "^5.0.5",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ToDieOrNot/xiaohongshu-mcp-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/ToDieOrNot/xiaohongshu-mcp-nodejs/issues"
  },
  "homepage": "https://github.com/ToDieOrNot/xiaohongshu-mcp-nodejs#readme"
}