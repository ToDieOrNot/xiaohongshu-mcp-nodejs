{
  "name": "xiaohongshu-mcp-nodejs",
  "version": "1.0.0",
  "description": "企业级小红书MCP Node.js重构 - 支持多账号矩阵管理、反风控、数据采集与发布",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "web": "node src/web/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-db.js",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "setup": "npm install && npm run db:init && npm run db:seed"
  },
  "keywords": [
    "xiaohongshu",
    "mcp",
    "automation",
    "social-media",
    "nodejs",
    "playwright",
    "stealth",
    "multi-account"
  ],
  "author": "MCP Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "playwright": "^1.40.1",
    "playwright-stealth": "^1.0.0",
    "ghost-cursor": "^1.1.19",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer": "^21.5.2",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "bull": "^4.12.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^5.0.3",
    "proxy-agent": "^6.3.1",
    "user-agents": "^1.0.1446",
    "faker": "^6.6.6",
    "sharp": "^0.33.1",
    "ffmpeg-static": "^5.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "repository": {
